<h3 class="form-title"><%= @user.name %>'s Profile</h3>

<ul>
	<li>
		Your Name: <%= @user.name %>
	</li>
	<li>
		Your Email: <%= @user.email %>
	</li>
</ul>

<% content_for(:side) do %>
	<br>
	<li>
		<%= link_to "Edit Profile", edit_user_path(@user) %>
	</li>
	<li>
		<%= link_to "Delete Profile", @user, 
						method: :delete, 
						data: {confirm: "Are you sure you want to delete your user account?"} %>
	</li>

<% end %>