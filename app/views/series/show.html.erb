<div class="series-title", id="show-title"><%= @series.name %></div>

<% if @series.comics.any? %>
<div id="filter">
	<h3>Sort By:</h3>
	<%= link_to "Issue Number", series_path(@series, :scope => 'issue_sort') %> | 
	<%= link_to "Redeemed", series_path(@series, :scope => 'redeemed') %> | 
	<%= link_to "Unredeemed", series_path(@series, :scope => 'unredeemed') %>
</div>

	<table id="show-comics">
		<tr>
			<th>Issue #</th>
			<th>Title</th>
			<th>Code</th>
			<th>Redeem</th>
			<th></th>
		</tr>
		
		<% @comics.each do |comic| %>
			<tr class="comic-row">
				<td><%= comic.number %></td>
				<td id="row-title"><%= comic.title %></td>
				<td class="redemption-code <%= redemption_style(comic) %>"><%= comic.redemption_code %></td>
				<td><%= link_to redemption_status(comic), 
									'#', 
									class: 'redeem-link',
									id: comic.id, 
									series_id: @series.id %></td>
				<td><%= link_to "Delete", 
									series_comic_path(@series, comic), 
									method: :delete, 
									data: {confirm: 'Are you sure?'} %></td>
			</tr>
		<% end %>
	</table>
<% else %>
	<div id="add-comic">
		<%= link_to "Add a New Comic!!", new_series_comic_path(@series) %>
	</div>
<% end %>



<% content_for(:side) do %>
	<br>
	<li><%= link_to "Edit Series Title", edit_series_path(@series) %></li>
  <li><%= link_to "Delete this Series", series_path(@series), method: :delete, data: {confirm: "Are you sure you want to delete this series and all of it's comics?"} %></li>
	<br>
	<li><%= link_to "Add a New Comic", new_series_comic_path(@series) %></li>	
<% end %>